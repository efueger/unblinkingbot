doctype html(lang="en")
head
  include head
body
  include mixins
  include navbar
  .container.mt-3
    form(id="slackSettings")
      .form-group(id="slackSettingsPanel")
        .card
          .card-header|Slack Integration
            a.badge.badge-info.float-right(
              href="https://api.slack.com/bot-users", target="_blank"
            )
              |About Slack bot users
          .card-block
            .mb-3|Slack RTM Client is
              span.ml-1(id="slackIntegrationStatus")
              |.
            .btn.btn-sm.btn-outline-success.mr-3(id="startSlack")
            .btn.btn-sm.btn-outline-danger.mr-3(id="stopSlack")
            #restartSlackIntegrationAlert
            #stopSlackIntegrationAlert
          ul.list-group.list-group-flush
            li.list-group-item
              .form-group(id="tokenPanel")
                a.badge.badge-primary(
                  data-toggle="collapse",
                  href="#editToken",
                  aria-expanded="false",
                  aria-controls="editToken"
                )|Slack Bot-User Token
                .collapse(
                  id="editToken"
                )
                  .small.mt-3.mb-3
                    |Enter the Slack bot-user token here. If a token has been
                    |previously saved, it will be automatically populated here to
                    |allow for changes.
                  .input-group(id="slackTokenInputGroup")
                    input.form-control.bg-faded.text-primary(
                      id="slackToken",
                      style="border-color: blue; font-family: monospace;",
                      type="text",
                      placeholder="e.g. xoxb-XXXXXXXXXXX-XXXXXXXXXXXXXXXXXXXXXXXX"
                    )
                    .input-group-addon.btn.btn-outline-primary.bg-faded(
                      id="saveToken",
                      style="border-color: blue;"
                    )
                      |Save
                  #saveSlackTokenAlert
                  #restartSlackTokenAlert
            li.list-group-item
              .form-group(id="defaultNotifyPanel")
                .mb-3|Choose where to send notifications
                .small.mb-3
                  |Choose where you would like the Slack bot user to send default
                  |notifications. Choose between a channel, a group, or a direct
                  |message to a user. Add the bot user to the desired channel or
                  |direct message in Slack first.
                .small.mb-3
                  b Channels
                  +space
                  |include non-private channels where the bot user has already been
                  |invited (is a member of the channel).
                .small.mb-3
                  b Groups
                  +space
                  |include private channels where the bot user has already been
                  |invited (is a member of the channel).
                .small.mb-3
                  b Users
                  +space
                  |include direct messages already open between users and the bot.
                .btn-group.mb-3(data-toggle="buttons")
                  label.btn.btn-outline-primary(id="radioChannel")
                    input(type="radio")
                    |Channel
                  label.btn.btn-outline-primary(id="radioGroup")
                    input(type="radio")
                    |Group
                  label.btn.btn-outline-primary(id="radioUser")
                    input(type="radio")
                    |User
                .progress.hidden-xs-up.mb-3(id="progressDefaultNotifications")
                  .progress-bar.progress-bar-striped.progress-bar-animated(
                    role="progressbar", aria-valuenow="100", aria-valuemin="0",
                    aria-valuemax="100", style="width: 100%"
                  )
                .input-group.hidden-xs-up.mb-3(id="inputChannels")
                  .input-group-addon.bg-faded.text-primary(
                    style="border-color: blue;"
                  )
                    |Channels
                  select.form-control.bg-faded.text-primary(
                    id="defaultChannelSelect",
                    style="border-color: blue;",
                    type="text"
                  )
                  .input-group-addon.btn.btn-outline-primary.bg-faded(
                    id="saveSlackDefaultNotifyChannel",
                    style="border-color: blue;"
                  )
                    |Save

                .input-group.hidden-xs-up.mb-3(id="inputGroups")
                  .input-group-addon.bg-faded.text-primary(
                    style="border-color: blue;"
                  )
                    |Groups
                  select.form-control.bg-faded.text-primary(
                    id="defaultGroupSelect",
                    style="border-color: blue;",
                    type="text"
                  )
                  .input-group-addon.btn.btn-outline-primary.bg-faded(
                    id="saveSlackDefaultNotifyGroup",
                    style="border-color: blue;"
                  )
                    |Save

                .input-group.hidden-xs-up.mb-3(id="inputUsers")
                  .input-group-addon.bg-faded.text-primary(
                    style="border-color: blue;"
                  )
                    |Users
                  select.form-control.bg-faded.text-primary(
                    id="defaultUserSelect",
                    style="border-color: blue;",
                    type="text"
                  )
                  .input-group-addon.btn.btn-outline-primary.bg-faded(
                    id="saveSlackDefaultNotifyUser",
                    style="border-color: blue;"
                  )
                    |Save
                #saveSlackNotifyAlert

  .container.mt-3
    form(id="motionSettings")
      .form-group(id="motionSettingsPanel")
        .card
          .card-header|motionEye Integration
            a.badge.badge-info.float-right(
              href="https://github.com/ccrisan/motioneye", target="_blank"
            )
              |About motionEye
          .card-block
            .mb-3|Snapshot URLs
            pre.text-primary.ml-1(
              id="motionSnapshotUrlList"
            )|Nothing yet.
            .form-group(id="motionSnapshotPanel")
              .card
                .card-header|Add a new motion snapshot URL
                .card-block
                  .small.mb-3
                    |Enter details for a new motion snapshot URL and click Save.
                  .input-group.mb-3(id="motionUrlInputGroup")
                    .input-group-addon
                      |Name
                    input.form-control.bg-faded.text-primary(
                      id="motionNickname",
                      style="border-color: blue; font-family: monospace;",
                      type="text",
                      placeholder="e.g. office"
                    )
                    .input-group-addon
                      |URL
                    input.form-control.bg-faded.text-primary(
                      id="motionSnapshotUrl",
                      style="border-color: blue; font-family: monospace;",
                      type="text",
                      placeholder="e.g. http://192.168.0.9:8000/picture/1/current/"
                    )
                    .input-group-addon.btn.btn-outline-primary.bg-faded(
                      id="saveMotionUrl",
                      style="border-color: blue;"
                    )
                      |Save
          .card-footer
  .container
    include footer
// Place JavaScript at the end of the document so the pages load faster
include js
script(src="/js/settings-templates.js")
script(src="/js/settings.js")
